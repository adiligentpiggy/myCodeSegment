#ARM=arm

ifdef ARM
DEFS = -DPLATFORM_ARM
CC = arm-fsl-linux-gnueabi-gcc
CFLAGS = -g -Wall -O0 -I/usr/local/alsa/include/ -I/usr/local/mad/include/
CFLAGS += -I/usr/local/id3tag/include
CFLAGS += -I/usr/local/sqlite3/include
CFLAGS += -I/usr/local/zlog/include
CFLAGS += -I/mnt/hgfs/shared_folder/code/test/led
CFLAGS += -I ./include

LIBS = -L/usr/local/alsa/lib/ -L/usr/local/mad/lib/ -lasound  -lmad
LIBS += -L/usr/local/id3tag/lib -lsqlite3
LIBS += -L/usr/local/sqlite3/lib -lsqlite3
LIBS += -L/usr/local/zlog/lib -lzlog -lpthread
LIBS += -L/mnt/hgfs/shared_folder/code/test/led -lEthledisplay
else
CC = gcc
CFLAGS = -g -Wall -O0 -I/usr/local/alsa_pc/include/ -I/usr/local/mad_pc/include/
CFLAGS += -I/usr/local/id3tag_pc/include
CFLAGS += -I/usr/local/sqlite3_pc/include
CFLAGS += -I/usr/local/zlog_pc/include
CFLAGS += -I/mnt/hgfs/shared_folder/code/test/led
CFLAGS += -I ./include

LIBS = -L/usr/local/alsa_pc/lib/ -L/usr/local/mad_pc/lib/ -lasound  -lmad
LIBS += -L/usr/local/id3tag_pc/lib -lsqlite3
LIBS += -L/usr/local/sqlite3_pc/lib -lsqlite3
LIBS += -L/usr/local/zlog_pc/lib -lzlog -lpthread
LIBS += -L/mnt/hgfs/shared_folder/code/test/led -lEthledisplay
endif

led : main.c ledisplay.h
	$(CC) $(CFLAGS) $< -o $@ $(LIBS)
